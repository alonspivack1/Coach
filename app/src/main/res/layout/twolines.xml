<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:paddingRight="60dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendmessage"
            android:background="@drawable/balloon"
            android:textColor="@color/colorTextReceive"
            android:padding="10dp"
            android:maxEms="10"
            android:backgroundTint="@color/colorMessageSender"
            android:elevation="2dp"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:text="הודעה נשלחת"
            />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="right"
        android:paddingRight="15dp"
        android:paddingLeft="60dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receivemessage"
            android:background="@drawable/balloon"
            android:textColor="@color/colorTextReceive"
            android:backgroundTint="@color/colorMessageReceive"
            android:padding="10dp"
            android:maxEms="10"
            android:elevation="2dp"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:text="הודעה מתקבלת"
            />


    </RelativeLayout>

</LinearLayout>