<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:minHeight="?attr/actionBarSize">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="צאטים"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:background="@android:color/transparent" />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="תוכנית אישית"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:textColor="#FFFF"
            android:background="@android:color/transparent" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="חיפוש מאמנים"
            android:textSize="20dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:textColor="#FFFF"
            android:background="@android:color/transparent"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="התראות"
            android:textSize="20dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:textColor="#FFFF"
            android:background="#FFFF"
            android:textStyle="bold" />


    </LinearLayout>

    <ToggleButton
        android:id="@+id/tbalert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textOff="תוכניות אימון"
        android:textOn="צאטים"
        android:background="@drawable/background"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnclearalert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:background="@drawable/background"
        android:text="מחק התראות" />
    <ListView
        android:id="@+id/alertslist"
        android:layout_width="match_parent"
        android:longClickable="true"
        android:divider="#20000000"
        android:dividerHeight="10dp"
        android:background="@drawable/background"
        android:layout_height="match_parent" />
</LinearLayout>