<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@drawable/backgroundman"
    android:orientation="vertical">


    <ToggleButton
        android:id="@+id/tbalert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textOff="תוכניות אימון"
        android:textOn="צאטים"
        android:background="@android:color/transparent"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnclearalert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:background="@android:color/transparent"
        android:text="מחק התראות" />
    <ListView
        android:id="@+id/alertslist"
        android:layout_width="match_parent"
        android:longClickable="true"
        android:divider="#20000000"
        android:dividerHeight="10dp"
        android:layout_height="match_parent" />
</LinearLayout>