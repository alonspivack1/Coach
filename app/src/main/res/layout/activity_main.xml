<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_gravity="right"
        android:gravity="right"
        android:minHeight="?attr/actionBarSize">




        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="צאטים"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:textColor="#FFFF"
            android:layout_weight="1"

            android:background="@android:color/transparent"
            android:onClick="FragmentOneClick"/>


            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תוכנית אישית"
                android:textSize="20dp"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#FFFF"
                android:background="@android:color/transparent"
                android:onClick="FragmentTwoClick" />



        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חיפוש מאמנים"
            android:textSize="20dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:background="@android:color/transparent"
            android:textColor="#FFFF"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="FragmentThirdClick"/>


        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התראות"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:background="@android:color/transparent"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:onClick="FragmentFourthClick"/>



    </LinearLayout>

    <fragment
        android:id="@+id/fragment_switch"
        android:name="coach.coach.FragmentTransfer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>