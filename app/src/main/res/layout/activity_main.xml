<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="צאטים"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="FragmentOneClick"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תוכנית אישית"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="FragmentTwoClick"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="חיפוש מאמנים"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="FragmentThirdClick"
            android:layout_weight="2"/>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_switch"
        android:name="coach.coach.TransferFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>