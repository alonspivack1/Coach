        android:theme="@style/AppTheme">
        <activity android:name=".FragmentAlerts"></activity>
        <activity android:name=".ListProgramNoInternet" />
        <activity android:name=".ProgramNoInternet" />
        <activity android:name=".Settings" />
        <activity android:name=".Mail" />
        <activity android:name=".Credits" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".ViewProgram" />
        <activity android:name=".Program" />
        <activity
            android:name=".Chat"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".FragmentChat" />
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".FragmentTransfer" />
        <activity android:name=".CoachProfileMaker" />
        <activity android:name=".UserProfileMaker" />
        <activity android:name=".MainActivity" />
        <activity android:name=".FragmentProgram" />
        <activity android:name=".FragmentSearch" />


        <service
            android:name=".BackgroundService"
            android:exported="false" />
    </application>

</manifest>